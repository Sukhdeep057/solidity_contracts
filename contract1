pragma solidity ^0.8.0;

contract VariableContract {
    
    uint public uintVar;
    bool public boolVar;
    address public addressVar;
    string public stringVar;

    // Set functions for each variable
    function setUintVar(uint _value) public {
        uintVar = _value;
    }

    function setBoolVar(bool _value) public {
        boolVar = _value;
    }

    function setAddressVar(address _value) public {
        addressVar = _value;
    }

    function setStringVar(string memory _value) public {
        stringVar = _value;
    }

    // Get functions for each variable
    function getUintVar() public view returns (uint) {
        return uintVar;
    }

    function getBoolVar() public view returns (bool) {
        return boolVar;
    }

    function getAddressVar() public view returns (address) {
        return addressVar;
    }

    function getStringVar() public view returns (string memory) {
        return stringVar;
    }
}
